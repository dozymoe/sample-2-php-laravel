artisan:
	$(MAKE) $(MAKEARGS) -C docker_mysql start args=""
	$(MAKE) $(MAKEARGS) -C docker_php_node build
	docker run -it --rm --network=$(NETWORK) \
		-v $(shell pwd):/var/www/work \
		php-node.demo php artisan $(args)

